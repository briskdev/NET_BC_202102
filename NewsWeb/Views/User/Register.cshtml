@model RegisterUserModel

<div asp-validation-summary="All"></div>

<form asp-controller="User" asp-action="Register" method="post">
    <div class="form-group">
        <label asp-for="Username"></label>
        <input asp-for="Username" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="RepeatedEmail"></label>
        <input asp-for="RepeatedEmail" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="RepeatedPassword"></label>
        <input asp-for="RepeatedPassword" class="form-control">
    </div>
    <button type="submit" class="btn btn-primary">Sign up</button>
</form>