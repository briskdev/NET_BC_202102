@model List<Library.Logic.DB.Books>

@if (Model.Count == 0)
{
    <b>There are no books available!</b>
}
else
{
    <table class="table table-striped">
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Year</th>
            <th style="text-align: center">Copies available</th>
            <th></th>
        </tr>
        @foreach(var book in Model)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>@book.Year</td>
                <td style="text-align: center; color: green; font-weight: bold;">@book.Copies</td>
                <th><a asp-controller="Book" asp-action="TakeBook" asp-route-title="@book.Title">Take</a></th>
            </tr>
        }
    </table>
}