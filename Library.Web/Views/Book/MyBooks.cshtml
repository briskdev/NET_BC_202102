@model List<Library.Logic.DB.UserBooks>

@if (Model.Count == 0)
{
    <b>You don't have any books!</b>
}
else
{
    <table class="table table-striped">
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Year</th>
            <th></th>
        </tr>
        @foreach(var book in Model)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>@book.Year</td>
                <th><a asp-controller="Book" asp-action="ReturnBook" asp-route-title="@book.Title">Return</a></th>
            </tr>
        }
    </table>
}